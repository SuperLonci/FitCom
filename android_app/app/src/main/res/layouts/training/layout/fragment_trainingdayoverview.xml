<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_trainingday_overview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".training.TrainingDayOverviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/rl_trainingday_info">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3er-Split"
            android:textSize="24sp"
            android:gravity="right"
            android:id="@+id/text_trainingdayoverview_plan"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push"
            android:textSize="48sp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_below="@id/text_trainingdayoverview_plan"
            android:id="@+id/text_trainingdayoverview_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DrÃ¼ck alles von dir wech!"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:id="@+id/text_trainingdayoverview_desc"
            android:layout_below="@id/text_trainingdayoverview_title"/>


        <Button
            android:id="@+id/btn_start_training"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:text="Start"
            android:textSize="32sp"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_below="@id/text_trainingdayoverview_desc"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_trainingday_exercises"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_trainingday_info"
        tools:listitem="@layout/exercise_item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

