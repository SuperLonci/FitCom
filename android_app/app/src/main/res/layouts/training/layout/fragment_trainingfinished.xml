<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.UserCheckInputs">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_trainingfinished_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Training abgeschlossen!"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/text_trainingfinished_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_trainingfinished_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Alles korrekt?"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/rl_trainingfinished_overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_trainingfinished_title" />

    <RelativeLayout
        android:id="@+id/rl_trainingfinished_overview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="0dp"
        android:layout_marginHorizontal="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_trainingfinished_yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_trainingfinished_desc">

        <TextView
            android:id="@+id/text_exercise_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:gravity="end"
            android:text="Historie"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_trainingfinished_overview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_exercise_overview"
            android:paddingHorizontal="20dp"
            android:layout_marginHorizontal="0dp"
            tools:listitem="@layout/overview_item" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_trainingfinished_yes"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:text="Ja"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_trainingfinished_no"
        app:layout_constraintTop_toBottomOf="@id/rl_trainingfinished_overview"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btn_trainingfinished_no"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:text="Nein"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@id/btn_trainingfinished_yes"
        app:layout_constraintEnd_toStartOf="@id/btn_trainingfinished_maybe"
        app:layout_constraintTop_toBottomOf="@id/rl_trainingfinished_overview"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_trainingfinished_maybe"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:text="Vielleicht"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@id/btn_trainingfinished_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_trainingfinished_overview"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>