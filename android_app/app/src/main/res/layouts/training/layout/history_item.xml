<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_exercise_history"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    android:clickable="false"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/text_history_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Bankdrücken"
            android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingTop="5dp"
        android:id="@+id/rl_values"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/text_history_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 kg"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_history_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_history_weight"
            android:paddingLeft="10dp"
            android:text="1 Stück"
            android:textSize="18sp"
            android:paddingStart="10dp" />
    </RelativeLayout>

        <TextView
            android:id="@+id/text_history_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rl_values"
            android:text="Vor 2 Tagen"
            android:textSize="15sp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>